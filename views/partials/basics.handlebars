<div>
  <form action='/' method='post'>
    <div class='form-group clearfix'>
      <label>Gender</label>
      <div>
        <input type="radio" name="gender" id='male' value="male" />
        <label for='male'>male</label><br />
        <input type="radio" name="gender" id='female' value="female" />
        <label for='female'>female</label><br />
        <input type="radio" name="gender" id='other' value="other" />
        <label for='other'>other</label>
      </div>
    </div>

    <div class='form-group clearfix'>
      <label>Age</label><br />
      <select name="age">
        <option value="20s" selected>20's</option>
        <option value="30s" selected>30's</option>
        <option value="40s" selected>40's</option>
        <option value="50s" selected>50's</option>
        <option value="Other" selected>Other</option>
      </select>
    </div>

    <div class='form-group clearfix'>
      <label>Distance</label><br />
      <select name="distance">
        <option value="5" selected>5 miles</option>
        <option value="10" selected>10 miles</option>
        <option value="15" selected>15 miles</option>
        <option value="20" selected>20 miles</option>
        <option value="25+" selected>25+</option>
      </select>
    </div>

    <div class='form-group clearfix'>
      <label>Education</label><br />
      <select name="education">
        <option value="Valhalla School of Performing Arts" selected>Valhalla School of Performing Arts</option>
        <option value="Agarth Warrior Academy" selected>Agarth Warrior Academy</option>
        <option value="Alfheim School of Elves" selected>Alfheim School of Elves</option>
        <option value="Hyperborea Hard Knocks" selected>Hyperborea Hard Knocks</option>
      </select>
    </div>

    <div class='form-group clearfix'>
      <label>Occupation</label><br />
      <select name="occupation">
        <option value="Warrior" selected>Warrior</option>
        <option value="Sage" selected>Sage</option>
        <option value="Jester" selected>Jester</option>
        <option value="Hunter" selected>Hunter</option>
      </select>
    </div>

    <input type='submit' class='btn' />
  </form>
</div>
